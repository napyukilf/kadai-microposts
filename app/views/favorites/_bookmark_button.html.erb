<% if current_user.bookmarking?(user) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: user.id), html:{ method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id ,micropost.id %>
    <%= f.submit 'nolist', class: 'btn btn-dangar btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id ,micropost.id  %>
    <%= f.submit 'list', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>

